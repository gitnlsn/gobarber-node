{
  "name": "node-template",
  "version": "1.0.0",
  "description": "template to build node projects",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration",
    "build": "tsc",
    "start": "node dist/server.js",
    "test:unit": "jest src/__tests__/unit/**/*.test.ts --verbose",
    "test:integration": "jest --runInBand src/__tests__/integration/**/*.test.ts --verbose",
    "docker:init": "npm run docker:server && sleep 5 && npm run docker:client:create-db:test && npm run docker:client:create-db:dev",
    "docker:server": "docker stop docker-postgres 2>/dev/null; sleep 2; docker run --rm -e POSTGRES_PASSWORD=postgresdocker -p 5432:5432 --name docker-postgres -d postgres",
    "docker:client:create-db:test": "docker run -it --rm --network container:docker-postgres postgres psql -h localhost -U postgres -c 'create database gobarber_test ;'",
    "docker:client:create-db:dev": "docker run -it --rm --network container:docker-postgres postgres psql -h localhost -U postgres -c 'create database gobarber;'",
    "typeorm": "ts-node-dev ./node_modules/typeorm/cli.js",
    "dev:server": "ts-node-dev --transpile-only src/server.ts"
  },
  "keywords": [
    "template",
    "node",
    "eslint",
    "typescript",
    "jest",
    "dotenv",
    "babel-jest"
  ],
  "author": "nelson kenzo tamashiro",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/node": "^13.13.0",
    "@types/nodemailer": "^6.4.0",
    "@types/validator": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "babel-jest": "^25.3.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "jest": "^25.3.0",
    "ts-jest": "^25.4.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.4.6",
    "pg": "^8.0.2",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.1.0",
    "typeorm": "^0.2.24",
    "uuidv4": "^6.0.8",
    "validator": "^13.0.0"
  }
}
